</div>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
    </tr>
  </thead>



<% @books.each do |book| %>

  <thead>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show", "/books/#{book.id}" %></span></td>
      <td><span><%= link_to "Edit",edit_book_path(book.id) %></span></td>
      <td> <%= link_to "Destroy","/books/#{book.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  </thead>

<% end %>
</table>



<h1>New book</h1>

<%= form_with model: @book, url:"/books", local:true do |f| %>

